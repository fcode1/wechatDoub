/* pages/movie-more/movie-more.wxss */

@import '/pages/movie-list/movie-list.wxss';
.session-tab {
    width: 100%;
    display: flex;
    position: fixed;
    top: 0;
    background: #fff;
    border-width: 2rpx 0;
    border-color: #9e9e9e9e;
    border-style: solid;
    z-index: 9;
}

.tab-name {
    flex: 1;
    font-size: 32rpx;
    font-weight: 600;
    text-align: center;
    height: 84rpx;
    line-height: 84rpx;
}

.tab-normal {
    color: #6b6b6b9e;
}

.tab-select {
    color: rgb(34, 238, 34);
    border-bottom: 4rpx solid rgb(34, 238, 34);
}

.session-movie {
    /* z-index: -1; */
    margin-top: 88rpx;
    background: #fff;
}

.scroll-movie {
    height: 100%;
}