page {
    height: 100%;
    background-color: #f7f7f7;
    font-size: 32rpx;
}

.container {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.search-movie {
    display: flex;
    font-size: 28rpx;
    padding: 20rpx 30rpx;
    align-items: center;
    background-color: #fff;
    border-width: 1rpx 0;
    border-style: solid;
    border-color: #e9e9e9;
    margin-bottom: 30rpx;
}

.search-icon {
    margin-right: 30rpx;
}

.search-placeholder {
    color: rgb(163, 161, 161);
}